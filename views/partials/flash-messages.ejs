<!-- Flash Messages Container -->
<div class="fixed top-4 right-4 z-50 space-y-4">
    <% if (messages.success_msg && messages.success_msg.length > 0) { %>
        <div class="flash-message bg-green-500 text-white px-6 py-4 rounded-lg shadow-lg transition-all duration-300" role="alert">
            <div class="flex items-center">
                <svg class="h-6 w-6 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span><%= messages.success_msg %></span>
                <button type="button" class="ml-4 text-white hover:text-gray-200 close-flash" aria-label="Close">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
        </div>
    <% } %>

    <% if (messages.error_msg && messages.error_msg.length > 0) { %>
        <div class="flash-message bg-red-500 text-white px-6 py-4 rounded-lg shadow-lg transition-all duration-300" role="alert">
            <div class="flex items-center">
                <svg class="h-6 w-6 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
                <span><%= messages.error_msg %></span>
                <button type="button" class="ml-4 text-white hover:text-gray-200 close-flash" aria-label="Close">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
        </div>
    <% } %>

    <% if (messages.warning_msg && messages.warning_msg.length > 0) { %>
        <div class="flash-message bg-yellow-500 text-white px-6 py-4 rounded-lg shadow-lg transition-all duration-300" role="alert">
            <div class="flex items-center">
                <svg class="h-6 w-6 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
                <span><%= messages.warning_msg %></span>
                <button type="button" class="ml-4 text-white hover:text-gray-200 close-flash" aria-label="Close">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
        </div>
    <% } %>

    <% if (messages.info_msg && messages.info_msg.length > 0) { %>
        <div class="flash-message bg-blue-500 text-white px-6 py-4 rounded-lg shadow-lg transition-all duration-300" role="alert">
            <div class="flex items-center">
                <svg class="h-6 w-6 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span><%= messages.info_msg %></span>
                <button type="button" class="ml-4 text-white hover:text-gray-200 close-flash" aria-label="Close">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
        </div>
    <% } %>
</div> 